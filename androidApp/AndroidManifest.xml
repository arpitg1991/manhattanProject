<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.panoramio" >
<uses-sdk
            android:minSdkVersion="13"
            android:targetSdkVersion="19" />
    <application android:icon="@drawable/icon" >
        <activity
            android:name="com.google.android.panoramio.Panoramio"
            android:label="@string/app_name"
            android:theme="@style/Theme.Panoramio" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<uses-library android:name="com.google.android.maps"/>
        
        

        <activity
            android:name="com.google.android.panoramio.ImageList"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchActivity" />
        </activity>
        <activity
            android:name="com.google.android.panoramio.SearchActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.google.android.panoramio.ViewImage"
            android:label="@string/app_name"
            android:theme="@style/Theme.Panoramio" />
        <activity
            android:name="com.google.android.panoramio.ViewMap"
            android:label="@string/app_name" />

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.google.android.panoramio.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

</manifest>